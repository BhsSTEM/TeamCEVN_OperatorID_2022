<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#1A601D"
    tools:context=".UserList">

    <ScrollView
        android:id="@+id/users_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="101dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:id="@+id/users_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="151dp"
            android:stretchColumns="*"
            app:layout_constraintBottom_toBottomOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/user_1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:width="150dp"
                    android:height="150dp"
                    android:backgroundTint="#144E16"
                    android:fontFamily="@font/averia_libre_light"
                    android:text="@string/user_1"
                    android:textColor="#FCFC03"
                    android:textSize="25sp"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/user_2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#144E16"
                    android:fontFamily="@font/averia_libre_light"
                    android:text="@string/user_2"
                    android:textColor="#FCFC03"
                    android:textSize="25sp"
                    app:cornerRadius="30dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/user_3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#144E16"
                    android:fontFamily="@font/averia_libre_light"
                    android:text="@string/user_1"
                    android:textColor="#FCFC03"
                    android:textSize="25sp"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/user_4"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#144E16"
                    android:fontFamily="@font/averia_libre_light"
                    android:text="@string/user_2"
                    android:textColor="#FCFC03"
                    android:textSize="25sp"
                    app:cornerRadius="30dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/user_5"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#144E16"
                    android:fontFamily="@font/averia_libre_light"
                    android:text="@string/user_1"
                    android:textColor="#FCFC03"
                    android:textSize="25sp"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/user_6"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#144E16"
                    android:fontFamily="@font/averia_libre_light"
                    android:text="@string/user_2"
                    android:textColor="#FCFC03"
                    android:textSize="25sp"
                    app:cornerRadius="30dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/user_7"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#144E16"
                    android:fontFamily="@font/averia_libre_light"
                    android:text="@string/user_1"
                    android:textColor="#FCFC03"
                    android:textSize="25sp"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/user_8"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#144E16"
                    android:fontFamily="@font/averia_libre_light"
                    android:text="@string/user_2"
                    android:textColor="#FCFC03"
                    android:textSize="25sp"
                    app:cornerRadius="30dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/user_9"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#144E16"
                    android:fontFamily="@font/averia_libre_light"
                    android:text="@string/user_1"
                    android:textColor="#FCFC03"
                    android:textSize="25sp"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/user_10"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#144E16"
                    android:fontFamily="@font/averia_libre_light"
                    android:text="@string/user_2"
                    android:textColor="#FCFC03"
                    android:textSize="25sp"
                    app:cornerRadius="30dp" />

            </TableRow>

        </TableLayout>
    </ScrollView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/users_scroll"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#144E16"
                android:fontFamily="@font/averia_libre_light"
                android:text="@string/save"
                android:textColor="#FCFC03"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/manage_presets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#144E16"
                android:fontFamily="@font/averia_libre_light"
                android:text="@string/manage_presets"
                android:textColor="#FCFC03"
                app:cornerRadius="30dp" />

        </TableRow>
    </TableLayout>

    <TableRow
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="50dp"
        android:layout_width="match_parent">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_column="0"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/profile"
            android:onClick="profile"
            android:src="@drawable/person"
            app:srcCompat="@drawable/person" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_marginStart="115dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/map"
            android:onClick="map"
            android:src="@drawable/ic_pin_filled"
            app:srcCompat="@drawable/ic_pin_filled" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_column="1"
            android:layout_marginStart="125dp"
            android:contentDescription="@string/settings"
            android:onClick="settings"
            android:src="@drawable/setting"
            app:srcCompat="@drawable/setting" />
    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>