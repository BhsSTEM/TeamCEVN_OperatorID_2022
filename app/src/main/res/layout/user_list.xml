<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#1A601D"
    tools:context=".UserList">

    <TableLayout
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_column="1"
        android:layout_marginTop="800dp"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </TableLayout>

    <TableLayout
        android:id="@+id/users"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="151dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </TableLayout>

    <TableLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_bar"
        app:layout_constraintTop_toBottomOf="@+id/users"
        tools:layout_editor_absoluteX="40dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/save"
                android:layout_width="128dp"
                android:layout_marginEnd="64dp"
                android:layout_marginBottom="128dp"
                android:backgroundTint="#144E16"
                android:fontFamily="@font/averia_libre_light"
                android:text="@string/save"
                android:layout_column="1"
                android:textColor="#FFEB3B" />

            <Button
                android:id="@+id/manage_presets"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="232dp"
                android:layout_marginBottom="128dp"
                android:backgroundTint="#144E16"
                android:fontFamily="@font/averia_libre_light"
                android:text="@string/manage_presets"
                android:textColor="#FFEB3B"
                android:layout_column="2" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>