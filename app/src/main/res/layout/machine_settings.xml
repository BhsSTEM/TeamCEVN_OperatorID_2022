<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="horizontal|vertical"
    android:fadingEdgeLength="10dp"
    tools:context=".MachineSettings">


    <EditText
        android:id="@+id/FanSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:outlineProvider="none"
        android:text="@string/fan_speed"/>

    <EditText
        android:id="@+id/MotorSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="500dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="@string/motor_speed"/>

    <EditText
        android:id="@+id/LowerSieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="200dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="@string/lower_sieve"/>

    <EditText
        android:id="@+id/UpperSieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="300dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="@string/upper_sieve"/>

    <EditText
        android:id="@+id/RotorSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="400dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="@string/rotor_speed"/>

    <Spinner
        android:id="@+id/MachineName"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:outlineProvider="paddedBounds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_wrapBehaviorInParent="included"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:layout_height="64dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="600dp"
        android:backgroundTint="#36762b"
        android:fontFamily="@font/brawler"
        android:text="@string/save"
        android:textColor="#fcfc03"
        android:textSize="34sp"/>

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="137dp"
        android:layout_height="48dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="100dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="number"
        android:text="@string/_12_mph"/>

    <EditText
        android:id="@+id/editTextNumber4"
        android:layout_width="137dp"
        android:layout_height="48dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="200dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="number"
        android:text="@string/_12_mph"/>

    <EditText
        android:id="@+id/editTextNumber5"
        android:layout_width="137dp"
        android:layout_height="48dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="300dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="number"
        android:text="@string/_12_mph"/>

    <EditText
        android:id="@+id/editTextNumber6"
        android:layout_width="137dp"
        android:layout_height="48dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="400dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="number"
        android:text="@string/_12_mph"/>

    <EditText
        android:id="@+id/editTextNumber3"
        android:layout_width="137dp"
        android:layout_height="48dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="500dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="number"
        android:text="@string/_12_mph"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@drawable/nav_color_selected"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_nav_bar" />


</RelativeLayout>